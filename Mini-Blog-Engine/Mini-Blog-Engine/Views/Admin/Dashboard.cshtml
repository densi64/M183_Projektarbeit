@model List<Mini_Blog_Engine.Models.Post>

@{
    ViewBag.Title = "Dashboard";
}

<h2>Dashboard</h2>

<div class="row" style="margin-top:80px;">

    <div class="col-lg-8 col-lg-offset-2">
        
        <form class="well" action="~/Admin/Search" method="post">
            <input class="form-control" name="searchString" type="text" />
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
        <table class="table table-hover">
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Content</th>
                <th>Detailansicht</th>
            </tr>
            @foreach (var post in Model)
            {
                <tr>
                    <td>@post.Title</td>
                    <td>@post.Description</td>
                    <td>@post.Content</td>
                </tr>
            }
        </table>
    </div>
</div>