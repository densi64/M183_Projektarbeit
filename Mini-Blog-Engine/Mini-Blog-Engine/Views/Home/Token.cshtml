@{
    ViewBag.Title = "Token";
}

<div class="row" style="margin-top:80px;">
    <div class="col-lg-8 col-lg-offset-2">
        
        <legend>Token</legend>
        
        <form class="well" action="~/Home/Token" method="post">
            
            <legend><small>Token</small></legend>
            
            <input type="text" name="token" value="" placeholder="xxxxxxxx" class="form-control" />
            <br />
            
            <input type="submit" name="" value="Verify" class="btn btn-primary">
            

            @Html.Hidden("username", Request["username"])
            @Html.Hidden("password", Request["password"])
        </form>
    </div>
</div>